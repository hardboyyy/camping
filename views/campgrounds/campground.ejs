<% include ../partials/header %>
<div class = "container">
    <header class = "jumbotron">
        <div class="container">
            <h1>Welcome To YelpCamp </h1>
            <p>View all the handpicked campground all over the world </p>
                <p>
                    <a class = "btn btn-primary btn-lg" href = "/campgrounds/new">add new campground</a>
                </p>
        </div>
    </header>
    
    <div class = "row">
        <% campground.forEach(function(campground){ %>
            <div class = "col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src = "<%= campground.image %>">
                    <div class = "caption">
                        <%= campground.name.toUpperCase() %>
                    </div>
                    <p><a href ="/campgrounds/<%=campground._id %>" class= "btn btn-primary">more Info</a></p>
                </div>
            </div>
        <% }); %>
    </div>
    
</div>
<% include ../partials/footer %>
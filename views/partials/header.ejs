<!DOCTYPE html>
<html>
    <head>
        <title> YelpCamp </title>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <link rel = "stylesheet" href = "/stylesheets/main.css">
    </head>
    <body>
        
        <nav>
	<div class="navbar navbar-default">
		<div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-nav-demo1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>			
			<a href="/" class="navbar-brand">YelpCamp</a>
		</div>
			<div class="collapse navbar-collapse" id="bs-nav-demo1">
				<ul class="nav navbar-nav">
					<li><a href="#">About</a></li>
					<li><a href="#">Contact</a></li>
				</ul>
				<ul class="nav navbar-nav navbar-right" >
					<% if(!currentUser){ %>
						<li><a href="/register">Sign Up</a></li>
						<li><a href="/login">Login</a></li>
					<% }else{ %>
						<li><a href="#">Signed In as <%= currentUser.username %></a></li>
						<li><a href="/logout">Log Out</a></li>
					<% } %>
				</ul>
			</div>
		</div>
		</div>
	</nav>
	<% if(error && error.length > 0){ %>
        <div class = "container">
        	<div class = "alert alert-danger">
        		<%= error %>
        	</div>
	<% } %>    
		<% if(success && success.length > 0){ %>
        	<div class = "alert alert-success">
        		<%= success %>
        	</div>
        </div>
	<% } %>
